@{
    ViewData["Title"] = "Контакти";
    
}
@using ToyShop.Common;

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@ViewData["Title"]</h2>
        </div>
        <hr />

        <!-- Contact Details -->
        <div class="row">
            <div class="col-md-6">
                <h3>Свържете се с нас</h3>
                <p><strong>Телефон:</strong> @SiteData.GetPhoneNumber()</p>
                <p><strong>Email:</strong> <a href="mailto:@SiteData.GetEmail()">@SiteData.GetEmail()</a></p>
                <p><strong>Адрес:</strong> @SiteData.GetAddress()</p>
                <p><strong>Работно време:</strong> Понеделник - Петък, 09:00 - 18:00</p>
            </div>            
        </div>
    </div>
    <!-- container -->
</div>
<!-- SECTION -->
