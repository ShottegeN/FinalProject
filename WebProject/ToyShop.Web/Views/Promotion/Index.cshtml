@{
    ViewData["Title"] = "Промоции";
}
@model IEnumerable<PromotionViewModel>

<div class="container" style="margin-top: 2em;">
    <div class="row">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@ViewData["Title"]</h2>
            <a asp-action="Add" asp-controller="Promotion" class="btn btn-warning btn-sm">Добави</a>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <td><strong>Име</strong></td>
                        <td><strong>Изображение</strong></td>
                        <td><strong>Отстъпка</strong></td>
                        <td><strong>Начало</strong></td>
                        <td><strong>Край</strong></td>
                        <td><strong>Действия</strong></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var promotion in Model)
                    {
                        <tr>
                            <td>@promotion.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(promotion.ImageUrl))
                                {
                                    <img src="/@promotion.ImageUrl" alt="@promotion.Name" class="img-fluid rounded" style="max-width: 120px;" />
                                }
                                else
                                {
                                    <img src="~/img/no-image-available-02.jpg" alt="No Image Available">
                                }
                            </td>
                            <td>@promotion.DiscountPercentage%</td>
                            <td>@promotion.StartDate.ToShortDateString()</td>
                            <td>@promotion.EndDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Promotion" asp-route-id="@promotion.Id" class="btn btn-warning btn-sm">Редактирай</a>
                                <a asp-action="Remove" asp-controller="Promotion" asp-route-id="@promotion.Id" class="btn btn-danger btn-sm">Изтрий</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
