@model StoreViewModel
@{
    ViewData["Title"] = "Играчки";
}

<div>
    <!-- BREADCRUMB -->
    <div id="breadcrumb" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb-tree">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">All Categories</a></li>
                        <li><a href="#">Accessories</a></li>
                        <li class="active">Headphones (227,490 Results)</li>
                    </ul>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /BREADCRUMB -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- ASIDE -->
                <div id="aside" class="col-md-3">                                       
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Категория</h3>
                        <div class="checkbox-filter">
                            @foreach (var category in Model.AllCategories)
                            {
                                <!-- Category -->
                                <partial name="_CategoryPartial" model="category"></partial>
                                <!-- /Category -->
                            }
                        </div>
                    </div>
                    <!-- /aside Widget -->
                </div>
                <!-- /ASIDE -->
                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- Store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Подреди по:
                                <select class="input-select" id="sortBy" data-sort-by="@ViewData["SortBy"]" onchange="updateFilter()">
                                    <option value="rating">Рейтинг</option> <!-- Default: Sort by Rating -->
                                    <option value="price_asc">Цена &#x25B2;</option> <!-- Sort by Price Ascending -->
                                    <option value="price_desc">Цена &#x25BC;</option> <!-- Sort by Price Descending -->
                                    <option value="name_asc">Име &#x25B2;</option> <!-- Sort by Name Ascending -->
                                    <option value="name_desc">Име &#x25BC;</option> <!-- Sort by Name Descending -->

                                </select>
                            </label>

                            <label>
                                Покажи:
                                <select class="input-select" id="pageSize" data-page-size="@ViewData["PageSize"]" onchange="updateFilter()">
                                    <option value="9">9</option>
                                    <option value="18">18</option>
                                    <option value="27">27</option>
                                </select>
                            </label>
                        </div>
                    </div>

                    <!-- /store top filter -->
                    <!-- store products -->
                    <div class="row">
                        <!-- product -->
                        @foreach (var product in Model.AllProducts)
                        {
                            <partial name="_ProductCardPartial" model="product"></partial>
                        }
                        <!-- /product -->
                    </div>
                    <!-- /store products -->
                    <!-- store bottom filter -->
                    <div class="store-filter clearfix">
                        <span class="store-qty">Показани @Model.AllProducts.Count() от @Model.TotalProductsCount артикула</span>
                        <ul class="store-pagination">
                            <li class="active">1</li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                    <!-- /store bottom filter -->
                </div>
                <!-- /STORE -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
</div>

<script src="~/js/store-filter.js"></script>
