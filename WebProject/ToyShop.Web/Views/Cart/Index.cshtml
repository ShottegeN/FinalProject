@{
    ViewData["Title"] = "Количка";
    var totalPrice = 0.00m;
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

@foreach (var product in Model)
{
    totalPrice += product.Price;

    <div class="row align-items-center mb-4 py-3" style="border-bottom: 1px solid #ccc;">
        <div class="col-md-2 text-center">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" class="img-fluid" style="max-height: 100px; object-fit: contain;" alt="@product.ProductName" />
            }
            else
            {
                <img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-height: 100px; object-fit: contain;" alt="Няма налично изображение" />
            }
        </div>
        <div class="col-md-4 text-start">
            <h5 class="mb-0">@product.ProductName</h5>
        </div>
        <div class="col-md-2 text-start">
            <h5 class="mb-0">@product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("bg-BG"))</h5>
        </div>
        <div class="col-md-4 text-end">
            <form asp-controller="Product" asp-action="RemoveFromCart" asp-route-id="@product.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Премахни</button>
            </form>
        </div>
    </div>
}

<div class="row align-items-center mb-4 py-3">

    <div class="col-md-2 text-center">
        <img src="https://media.istockphoto.com/id/1206806317/vector/shopping-cart-icon-isolated-on-white-background.jpg?s=612x612&w=0&k=20&c=1RRQJs5NDhcB67necQn1WCpJX2YMfWZ4rYi1DFKlkNA=" class="img-fluid" style="max-height: 100px; object-fit: contain;" alt="Няма налично изображение" />
    </div>

    <div class="col-md-4 text-start">
        <h5 class="mb-0">Обща сума:</h5>
    </div>
    <div class="col-md-2 text-start">
        <h5 class="mb-0">@totalPrice.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("bg-BG"))</h5>
    </div>
    <div class="col-md-4 text-end">
        <form asp-controller="Product" asp-action="FinishOrder" asp-route-id="" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Завърши поръчка</button>
        </form>
    </div>
</div>
