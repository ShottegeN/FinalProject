@model ToyShop.ViewModels.ErrorViewModel


<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <div class="container text-center mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg">
                        <div class="card-header bg-danger text-white">
                            <h3>@Model.Title</h3>
                        </div>
                        <div class="card-body">
                            <p class="lead">@Model.Message</p>
                            @if (!string.IsNullOrEmpty(Model.SupportContact))
                            {
                                <p class="text-muted">
                                    Ако проблемът продължи, моля свържете се с нас на
                                    <a href="mailto:@Model.SupportContact" class="text-decoration-none">@Model.SupportContact</a>
                                </p>
                            }
                            <button class="btn btn-primary" onclick="window.history.back()">Върни се обратно</button>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container -->
</div>
<!-- SECTION -->
