@using Microsoft.AspNetCore.Identity
@using ToyShop.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Профил"><i class="fa fa-user-o"></i>Моят профил</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Изход</a>
        
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
